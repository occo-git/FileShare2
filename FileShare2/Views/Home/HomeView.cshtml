<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Share File</title>
    <link rel="icon" href="favicon.png" type="image/png">
    <link rel="stylesheet" href="/styles1.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <table class="main-table">
        <tr>
        </tr>
        <tr>
            <td style="width:50%" />
            <td>
                <label class="main-title">Share&nbsp;File</label>
            </td>
            <td style="width:50%">
                <div class="main-version" id="version"></div>
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <div class="container">
                    <form id="uploadForm" enctype="multipart/form-data">
                        <table class="form-table">
                            <tr>
                                <td style="width:50%" />
                                <td>
                                    <table class="form-table">
                                        <tr>
                                            <td>
                                                <label class="custom-label" id="fileTitle">File</label>
                                            </td>
                                            <td>
                                                <label class="custom-label" id="linkTitle">Link</label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="title-td">Name</td>
                                            <td class="title-td">Duration</td>
                                        </tr>
                                        <tr>
                                            <td><div id="fileName"></div></td>
                                            <td>
                                                <table class="form-table">
                                                    <tr>
                                                        <td>
                                                            <input type="radio" name="duration" id="duration10" value="10" required />
                                                            <label for="duration10" class="file-duration-min">10min</label>
                                                        </td>
                                                        <td>
                                                            <input type="radio" name="duration" id="duration20" value="20" required />
                                                            <label for="duration20" class="file-duration-min">20min</label>
                                                        </td>
                                                        <td>
                                                            <input type="radio" name="duration" id="duration30" value="30" required />
                                                            <label for="duration30" class="file-duration-min">30min</label>
                                                        </td>
                                                        <td>
                                                            <input type="radio" name="duration" id="duration60" value="60" required />
                                                            <label for="duration60" class="file-duration-min">1hour</label>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="title-td">Size</td>
                                            <td class="title-td" id="status">Status</td>
                                        </tr>
                                        <tr>
                                            <td><div id="fileSize"></div></td>
                                            <td>
                                                <div id="progressContainer">
                                                    <div id="progressBar"></div>
                                                </div>
                                                <div id="message"></div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div id="fileInputDiv">
                                                    <label class="custom-button" id="fileInputLabel" for="fileInput">Select a File</label>
                                                    <input class="file-input" id="fileInput" type="file" name="file" required />
                                                </div>
                                            </td>
                                            <td>
                                                <div id="submitDiv">
                                                    <label class="custom-button" id="submitLabel" for="submitBtn">Create a Link!</label>
                                                    <button class="submit-btn" id="submitBtn" type="submit"></button>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td style="width:50%" />
                            </tr>
                        </table>
                    </form>

                    <div id="url"></div>
                    <button id="copyUrl" class="custom-button">Copy Link</button>

                    <div id="serverProcessing">
                        <div id="spinner"></div>
                        <div id="server-message">Server processing ...</div>
                    </div>

                    <div id="qrCode"></div>
                </div>
            </td>
        </tr>
    </table>

    <script>
        // jQuery
        $(document).ready(function () {

            function adjustLayout() {
                if ($(window).width() < $(window).height()) {
                    $('#mobile-view').show();
                    $('#desktop-view').hide();
                } else {
                    $('#desktop-view').show();
                    $('#mobile-view').hide();
                }
            }
            
            // adjust layout to window size
            //adjustLayout();
            //$(window).resize(adjustLayout);

            // Reset form function
            function resetForm() {
                $('#fileInputLabel').show();
                $('#submitLabel').hide();
                $('#fileName').text('-');
                $('#fileSize').text('0 MB (max 0 MB)');
                $('#duration10').prop('checked', true);
                $('#progressContainer').hide();
                $('#status').text('Status');
                $('#message').show();
                $('#message').text('-');
                $('#serverProcessing').hide();
                $('#url').hide();
                $('#url').text(null);
                $('#copyUrl').hide();
                $('#qrCode').text(null);
            }

            $('#fileInput').val(null); // reset selected file
            resetForm();

            let maxFileSizeMB = 0;
            // Set image tag (app version)
            $.get('/Health/imagetag', function (data) {
                $('#version').text(data.imageTag);
            });
            // Set maximum file size
            $.get('/Health/maxfilesize', function (data) {
                maxFileSizeMB = (data.maxFileSize / 1024 / 1024);
                $('#fileSize').text(`0 MB (max ${maxFileSizeMB} MB)`);
            });

            // File selected
            $('#fileInput').on('change', function(event) {

                resetForm();

                const file = event.target.files[0];
                if (file)
                {
                    // Set file name
                    $('#fileName').text(`${file.name}`)

                    // Get selected file size (without uploading)
                    const fileSizeInKB = (file.size / 1024).toFixed(2);
                    const fileSizeInMB = (fileSizeInKB / 1024).toFixed(2);
                    if (fileSizeInMB > 0)
                        $('#fileSize').text(`${fileSizeInMB} MB (max ${maxFileSizeMB} MB)`);
                    else
                        $('#fileSize').text(`${fileSizeInKB} KB (max ${maxFileSizeMB} MB)`);

                    if (maxFileSizeMB == 0 || file.size == 0)
                    {
                        $('#message').show();
                        $('#message').text('File is empty');
                    }
                    else
                    {
                        if (fileSizeInMB <= maxFileSizeMB)
                            $('#submitLabel').show(); // show Submit button
                        else
                        {
                            $('#message').show();
                            $('#message').text('File is too big');
                        }
                    }
                }
                else
                {
                    $('#fileName').text('-');
                    $('#fileSize').text(`0 MB (max ${maxFileSizeMB} MB)`);
                }
            });

            $('#uploadForm').on('submit', function (e) {
                e.preventDefault(); // prevent defualt form submit

                $('#fileInputLabel').hide();
                $('#submitLabel').hide();
                $('#message').hide();

                var formData = new FormData(this);
                var xhr = new XMLHttpRequest(); // AJAX-request

                // Check uploading progress
                xhr.upload.addEventListener('progress', function (event) {
                    if (event.lengthComputable) { // is total computable
                        var percentage = Math.floor((event.loaded / event.total) * 100);
                        $('#progressContainer').show();
                        $('#progressBar').css('width', percentage + '%');
                        $('#status').text('Upload...' + percentage + '%');
                        if (percentage == 100)
                            $('#serverProcessing').show();
                    }
                });

                // upload completed
                xhr.onload = function () {
                    if (xhr.status === 200)
                    {
                        $('#progressContainer').hide();
                        $('#serverProcessing').hide();
                        $('#status').text('Upload completed!');

                        // get Message, URL, QR-code from the response
                        var response = JSON.parse(xhr.responseText);
                        if (response.message)
                        {
                            $('#message').show();
                            $('#message').text(response.message);
                        }
                        if (response.url)
                        {
                            $('#url').text(response.url);
                            $('#copyUrl').show();
                        }
                        if (response.qrCode)
                            $('#qrCode').html(response.qrCode);                            
                    }
                    else
                    {
                        $('#progressContainer').hide();
                        $('#serverProcessing').hide();
                        $('#status').css('background', 'red');
                        $('#status').text('Upload error!');
                        var response = JSON.parse(xhr.responseText);
                        if (response.message)
                        {
                            $('#message').show();
                            $('#message').css('color', 'red');
                            $('#message').text(response.message);
                        }
                    }
                };

                // open request
                xhr.open('POST', '/Home/Upload', true);
                // send form data
                xhr.send(formData);
            });

            // copy link url in buffer
            $('#copyUrl').on('click', function () {
                const urlText = $('#url').text();
                if (urlText) {
                    navigator.clipboard.writeText(urlText).then(function() {
                        $('#message').show();
                        $('#message').text('Link copied to clipboard!');
                    }, function(err) {
                        $('#message').show();
                        $('#message').text('Failed to copy link: ' + err);
                    });
                }
            });
        });
    </script>

</body>
</html>